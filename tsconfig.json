{
  "compilerOptions": {
    "target": "ES2017",
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react",
    "declaration": true,
    "outDir": "dist",
    "allowJs": false,
    "strict": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "lib": ["ES2017", "DOM"]
  },
  "include": [
    "src/**/*", "demo/src/**/*"],
  "exclude": ["node_modules", "dist"]
}
